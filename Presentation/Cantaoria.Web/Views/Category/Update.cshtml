@{
    Layout = "_Layout";
}

@model Cantaoria.Application.Models.Requests.CategoryRequests.UpdateCategoryRequest


<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kategori Güncelle</h6>
        </div>
        <div class="card-body">
            <form asp-controller="Category" asp-action="Update" id="productForm" method="post" enctype="multipart/form-data">
                <input asp-for="@Model.ID" type="hidden" />
                    <div class="form-group">
                        <label for="name">Ürün Adı:</label>
                        <input asp-for="Name" type="text" class="form-control form-control-lg form-control-solid" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Açıklama:</label>
                        <textarea asp-for="Description" class="form-control form-control-lg form-control-solid" id="description" name="description" rows="3" required></textarea>
                    </div>
                
                <div class="form-group">
                    <label for="category">Kategori:</label>
                    <select asp-for="MenuID" asp-items="@Model.Menu" class="form-select form-select-lg form-select-solid" required>
                        <option value="" disabled selected>Seçiniz</option>
                    </select>
                </div>
              
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a href="/Category/List" class="btn btn-info ">Vazgeç</a>
            </form>
        </div>
    </div>
</div>