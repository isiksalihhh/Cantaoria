
@{
    Layout="_Layout";
}

@model Cantaoria.Application.Models.Requests.RoleRequests.CreateRoleRequest

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Rol Oluştur</h6>
        </div>
        <div class="card-body">
            <form asp-controller="Role" asp-action="Create"  method="post" enctype="multipart/form-data">
               
                    <div class="form-group">
                        <label for="name">Rol Adı:</label>
                        <input asp-for="Name" type="text" class="form-control form-control-lg form-control-solid" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Açıklama:</label>
                        <textarea asp-for="Description" class="form-control form-control-lg form-control-solid" id="description" name="description" rows="3" required></textarea>
                    </div>
              
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a href="/Role/List" class="btn btn-info ">Vazgeç</a>
            </form>
        </div>
    </div>
</div>